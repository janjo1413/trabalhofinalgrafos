{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar TSP (Otimizado)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-O2",
        "src/Graph.cpp",
        "src/TSPSolver.cpp", 
        "src/PerformanceAnalyzer.cpp",
        "main.cpp",
        "-o",
        "tsp_solver.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Compilar TSP (Debug)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-g",
        "-DDEBUG",
        "src/Graph.cpp",
        "src/TSPSolver.cpp",
        "src/PerformanceAnalyzer.cpp", 
        "main.cpp",
        "-o",
        "tsp_solver_debug.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Executar TSP",
      "type": "shell",
      "command": ".\\tsp_solver.exe",
      "dependsOn": "Compilar TSP (Otimizado)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Compilar com Makefile",
      "type": "shell",
      "command": "make",
      "args": ["all"],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Limpar projeto",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "group": "build"
    },
    {
      "label": "Compilar C++ (Legacy)",
      "type": "shell",
      "command": "g++",
      "args": [
        "cpp.cpp",
        "-o",
        "cpp.exe"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Executar C++ (Legacy)",
      "type": "shell",
      "command": ".\\cpp.exe",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
